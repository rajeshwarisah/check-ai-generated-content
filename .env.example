# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Detection Thresholds
AI_DETECTION_THRESHOLD=0.80
CONFIDENCE_THRESHOLD=0.70
MIN_TEXT_WORDS=50

# Processing Configuration
MAX_PDF_PAGES=450
BATCH_SIZE=1
ENABLE_OCR=true

# Model Paths
TEXT_MODEL_PATH=models/text/roberta_detector
IMAGE_MODEL_PATH=models/image/cnn_detector

# Output Configuration
OUTPUT_DIR=outputs/reports
LOG_DIR=logs
LOG_LEVEL=INFO

# Web UI Configuration (if using)
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=false
UPLOAD_FOLDER=src/web/static/uploads
MAX_UPLOAD_SIZE_MB=100

# Tesseract Configuration (if not in PATH)
# TESSERACT_CMD=/usr/local/bin/tesseract
